.markdown-body
  img,
  video,
  canvas,
  iframe
    max-width 100%
  h1,
  h2,
  h3,
  h4,
  h5,
  h6
    font-weight 400
    position relative

  a
    text-decoration none
    color var(--color-link)
    overflow-wrap break-word
    word-break break-all

  code
    font-family var(--font-family-mono) !important

  // overflow-x hidden
  a.header-anchor
    position absolute
    left -30px
    width 30px
    text-align center
    visibility hidden 

  h1:hover a.header-anchor,
  h2:hover a.header-anchor,
  h3:hover a.header-anchor,
  h4:hover a.header-anchor,
  h5:hover a.header-anchor,
  h6:hover a.header-anchor
    visibility visible

  code
    background var(--color-code-background)
    padding 2px 4px
    border-radius 5px

  blockquote
    margin 0
    padding 0 16px
    border-left 4px solid var(--color-line)

  table
    border-collapse collapse

  td,
  th
    border 1px solid var(--color-line)
    padding 0.4em 1em

  hr
    border 0
    height 1px
    background var(--color-line)

  pre
    padding 1em

  pre,
  div[class*='language-']
    position relative
    background var(--color-code-background)
    color var(--color-text)
    border-radius 5px

    .highlight-lines
      position absolute
      user-select none
      top 0
      left 0
      width 100%
      line-height 1.5
      padding 1em 0

      .highlighted
        background-color #fffbdd

    code
      padding 0

  .line-numbers-mode
    .line-numbers-wrapper
      position absolute
      top 1em
      left 0.5em
      padding-right 0.5em
      min-width 1.5em
      // color rgba(var(--color-text), 0.4)
      text-align right
      line-height 1.5
      user-select none

    pre[class*='language-']
      padding-left 3.5em
